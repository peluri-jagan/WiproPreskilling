@model List<MVC_Demo.Models.Product>

<h1>Product List</h1>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Price</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.Id</td>
                <td>@product.Name</td>
                <td>@product.Price.ToString("C",new System.Globalization.CultureInfo("en-IN"))</td>
            </tr>
        }

    </tbody>
</table>
