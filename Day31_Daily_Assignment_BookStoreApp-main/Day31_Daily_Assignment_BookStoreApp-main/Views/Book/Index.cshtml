@model IEnumerable<YourApp.Models.Book>
@{
    ViewBag.Title = "Books";
}

<h2 class="text-center display-4">Welcome to the Book Store</h2>
<h3>Books</h3>
<p><a asp-action="Create" class="btn btn-primary">Add new</a></p>
<table class="table">
    <thead><tr><th>Title</th><th>Author</th><th>Price</th><th></th></tr></thead>
    <tbody>
    @foreach(var b in Model) {
        <tr>
            <td>@b.Title</td>
            <td>@b.Author</td>
            <td>@b.Price</td>
            <td>
                <a asp-action="Details" asp-route-id="@b.BookId" class="btn btn-info ">Details</a> |
                <a asp-action="Edit" asp-route-id="@b.BookId" class="btn btn-warning ">Edit</a> |
                <a asp-action="Delete" asp-route-id="@b.BookId" class="btn btn-danger ">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>
<p>Total Books: @Model.Count()</p>