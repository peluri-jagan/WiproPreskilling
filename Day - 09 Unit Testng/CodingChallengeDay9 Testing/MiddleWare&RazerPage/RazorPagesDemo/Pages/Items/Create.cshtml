@page
@model RazorPagesDemo.Pages.Items.CreateModel
@{
    ViewData["Title"] = "Add Item";
}

<h2>Add Item</h2>

<form method="post">
    <div class="form-group">
        <label for="newItem">Enter Item:</label>
        <input type="text" id="newItem" asp-for="NewItem" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Add</button>
</form>

@if (!string.IsNullOrEmpty(Model.Message))
{
    <p>@Model.Message</p>
}
