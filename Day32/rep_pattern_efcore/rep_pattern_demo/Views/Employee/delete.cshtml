@model rep_pattern_demo.Models.Employee

<h2>Delete Employee</h2>

<h4>Are you sure you want to delete this employee?</h4>

<div>
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.EmployeeName</dd>

        <dt class="col-sm-2">Address</dt>
        <dd class="col-sm-10">@Model.Address</dd>

        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.EmailId</dd>

        <dt class="col-sm-2">Phone</dt>
        <dd class="col-sm-10">@Model.PhoneNumber</dd>

        <dt class="col-sm-2">Joining Date</dt>
        <dd class="col-sm-10">@Model.DateOfJoining.ToShortDateString()</dd>

        <dt class="col-sm-2">Salary</dt>
        <dd class="col-sm-10">â‚¹@Model.Salary</dd>
    </dl>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="EmployeeId" />
    <button type="submit" class="btn btn-danger">Yes, Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
